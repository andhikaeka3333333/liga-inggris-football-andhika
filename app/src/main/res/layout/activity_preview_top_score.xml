<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PreviewTopScore">

    <ImageView
        android:layout_margin="10dp"
        android:id="@+id/ivArrowBack"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/round_arrow_back_24" />

    <ImageView
        android:id="@+id/ivImagePemain"
        android:layout_width="250dp"
        android:layout_height="250dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/haaland"/>

    <TextView
        android:textColor="#dc213e"
        android:layout_marginStart="10dp"
        android:id="@+id/tvHeaderNama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:textSize="40dp"
        android:fontFamily="@font/poppins"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/ivImagePemain"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="10dp"/>

    <TextView
        android:layout_marginStart="10dp"
        android:id="@+id/tvNamaPemain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="John Doe"
        android:textSize="25dp"
        android:fontFamily="@font/poppins"
        app:layout_constraintTop_toBottomOf="@+id/tvHeaderNama"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="#362278"/>

    <TextView
        android:textColor="#dc213e"
        android:layout_marginStart="10dp"
        android:id="@+id/tvHeaderClub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Club"
        android:textSize="40dp"
        android:fontFamily="@font/poppins"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/tvNamaPemain"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="10dp"/>

    <TextView
        android:layout_marginStart="10dp"
        android:id="@+id/tvNamaClub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Arema"
        android:textSize="25dp"
        android:fontFamily="@font/poppins"
        app:layout_constraintTop_toBottomOf="@+id/tvHeaderClub"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="#362278"/>

    <TextView
        android:textColor="#dc213e"
        android:layout_marginStart="10dp"
        android:id="@+id/tvHeaderCountry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Country"
        android:textSize="40dp"
        android:fontFamily="@font/poppins"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/tvNamaClub"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="10dp"/>

    <TextView
        android:layout_marginStart="10dp"
        android:id="@+id/tvCountry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Indonesia "
        android:textSize="25dp"
        android:fontFamily="@font/poppins"
        app:layout_constraintTop_toBottomOf="@+id/tvHeaderCountry"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="#362278"/>



</androidx.constraintlayout.widget.ConstraintLayout>